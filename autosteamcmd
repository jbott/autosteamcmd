#!/usr/bin/python
import argparse, sys, steamcmd, color

# Parse arguments
parser = argparse.ArgumentParser(description='Make SteamCMD easier to use.')
parser.add_argument('--list', dest='list', action='store_false', help='List all known games (app argument not needed)')
parser.add_argument('--validate', dest='validate', action='store_false', help='Validate the game files')
parser.add_argument('app', nargs='*', help='Application id, name, or abreviation (filters if --list specified)')
args = parser.parse_args()

# List all games in the data file
if not(args.list):
	sys.exit(0)

# Not listing... Do we have an app then?
if len(args.app) == 0:
	parser.print_help()
	sys.exit(1)

# We have an app, find and install it!
print args.app
